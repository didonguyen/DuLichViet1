@model List < Entity.Framework.Tourist_Group>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Trang Quản Lí Đoàn</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Đoàn Du Lịch
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <a href="/Admin/Tourist_Group/Create">Thêm Đoàn Mới..</a>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Mã Đoàn</th>
                            <th>Tên Đoàn</th>
                            <th>Chương trình tham quan</th>
                            <th>Ngày khởi hành</th>
                            <th>Phương tiện</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>
                                    <a href="/Admin/Tourist_Group/Edit/@item.Madoan">Sửa |</a>
                                    <a href="/Admin/Tourist_Group/Delete/@item.Madoan">Xóa |</a>
                                    <a href="/Admin/Tourist_Group/Details/@item.Madoan">Chi Tiết</a>
                                </td>
                                <td>@item.Madoan</td>
                                <td>@item.Tendoan</td>
                                <td>@item.Chuongtrinhthamquan</td>
                                <td>@item.Ngaykhoihanh</td>
                                <td>@item.Phuongtien</td>
                            </tr>
                        }
                        
                        
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>