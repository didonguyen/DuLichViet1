
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var Tours = (List<Entity.Framework.Tour>)ViewBag.RES;
}

<h2>Thống Kê</h2>

@using (Html.BeginForm("TK", "Customer", FormMethod.Get))
{
 
    <div class="row">
        <div class="col-lg-12">
            <div class="col-md-4 form-group" style="display:inline-flex">
                 <label style="line-height:35px;width:25%" for="ngaybatdau">Ngày bắt đầu: </label>
                <input type="datetime" style="width:75%" class="form-control datepicker" name="ngaybatdau" />
            </div>

            <div class="col-md-4 form-group" style="display:inline-flex">
                <label style="line-height:35px;width:25%" for="ngayketthuc">Ngày kết thúc: </label>
                <input type="datetime"  style="width:75%" class="form-control datepicker" name="ngayketthuc" />
            </div>

            <script>
                $(document).ready(function() {
              $('.datepicker').datepicker({ format: "mm//dd/yyyy" }).on('changeDate', function(ev) {
                $(this).datepicker('hide');
                    });
                });
            </script>
            <div>
                <button class="btn btn-default" type="submit">Thống kê</button>
            </div>
        </div>
    </div>

    <div class="panel-body">
        <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
            <thead>
                <tr>
                    <th>Mã Tour</th>
                    <th>Tên Tour</th>
                    <th>Đặc điểm</th>
                    <th>Giá tour</th>
                    <th>Loại Hình</th>
                    <th>Ngày Khởi Hành</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Tours)
                {
                    <tr class="odd gradeX">
                        <td>@item.Matour</td>
                        <td>@item.Tentour</td>
                        <td>@item.Dacdiem</td>
                        <td>@item.Giatour</td>
                        <td>@item.Loaihinh</td>
                        <td>@item.Ngaykhoihanh</td>
                    </tr>
                }


            </tbody>
        </table>
        <!-- /.table-responsive -->
    </div>
}


<div>
    @Html.ActionLink("Quay trở lại", "Index")
</div>
