
@model List<Entity.Framework.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Thống Kê Quá Trình Đi Tour</h2>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Mã Khách Hàng</th>
                            <th>Tên Khách Hàng</th>
                            <th>CMND</th>
                            <th>Địa Chỉ</th>
                            <th>Giới Tính</th>
                            <th>Số điện thoại</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>
                                    <a href="/Admin/Customer/TK/@item.Makhachhang"> Thống Kê </a>
                                </td>
                                <td>@item.Makhachhang</td>
                                <td>@item.Tenkhachhang</td>
                                <td>@item.Cmnd</td>
                                <td>@item.Diachi</td>
                                <td>@item.Gioitinh</td>
                                <td>@item.Sodienthoai</td>
                            </tr>
                        }


                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>